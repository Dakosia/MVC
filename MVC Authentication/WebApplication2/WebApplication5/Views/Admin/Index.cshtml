@using WebApplication5.Models
@model IEnumerable<AppUser>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table>
    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Email</td>
        <td></td>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">Нет данных</td>
        </tr>
    }
    else
    {
        foreach (AppUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = user.Id })
                    @Html.ActionLink("Удалить", "Delete", new { id = user.Id })
                </td>
            </tr>
        }
    }
</table>

@Html.ActionLink("Создать", "Create", "")

