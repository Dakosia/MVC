@model IEnumerable<BestHookah.DAL.Gallery>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreateImage")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ImageId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImagePath)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditImage", new { ImageId = item.ImageId }) |
            @Html.ActionLink("Details", "DetailsImage", new { ImageId = item.ImageId }) |
            @Html.ActionLink("Delete", "DeleteImage", new { ImageId = item.ImageId })
        </td>
    </tr>
}

</table>
