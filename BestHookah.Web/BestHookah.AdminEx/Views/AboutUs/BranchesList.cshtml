@model IEnumerable<BestHookah.DAL.Branches>

@{
    ViewBag.Title = "Branches List";
}

<h2>Branches List</h2>

<p>
    @Html.ActionLink("Create New", "CreateBranch")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BranchId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BranchName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BranchDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BranchAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BranchPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BranchHoursOfOperations)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BranchId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BranchName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BranchDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BranchAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BranchPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BranchHoursOfOperations)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditBranch", new { BranchId = item.BranchId }) |
            @Html.ActionLink("Details", "DetailsBranch", new { BranchId = item.BranchId }) |
            @Html.ActionLink("Delete", "DeleteBranch", new { BranchId = item.BranchId })
        </td>
    </tr>
}

</table>
